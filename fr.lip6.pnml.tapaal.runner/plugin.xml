<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="fr.lip6.pnml.tapaal.ui.category"
            id="fr.lip6.pnml.tapaal.ui.allCommand"
            name="Generate Order">
      </command>
      <category
            id="fr.lip6.pnml.tapaal.ui.category"
            name="Order">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.lip6.pnml.tapaal.ui.AllVariables"
            commandId="fr.lip6.pnml.tapaal.ui.allCommand">
      </handler>
   </extension>
 
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
            <command
                  commandId="fr.lip6.pnml.tapaal.ui.allCommand"
                  id="fr.lip6.pnml.tapaal.ui.javaExplorer"
                  mnemonic="S">
 
                    <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.pnml" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
            </command>
      </menuContribution>
   </extension>
      <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
            <command
                  commandId="fr.lip6.pnml.tapaal.ui.allCommand"
                  id="TestPopupMenu.menus.sampleCommand"
                  mnemonic="S">
 
                    <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.pnml" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
            </command>
      </menuContribution>
   </extension>
</plugin>
